{
  "name": "tic-tac-toe",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "lint": "eslint --fix",
    "build": "vite build",
    "test:unit": "cross-env VITEST_JUNIT_FILE=results/app-unit.xml vitest run tests/unit --environment=jsdom",
    "test:api": "cross-env VITEST_JUNIT_FILE=results/app-api.xml vitest run tests/api --environment=node",
    "cy:open": "start-server-and-test vite http-get://localhost:8080 'cypress open --config-file cypress.config.ts'",
    "test:component": "start-server-and-test vite http-get://localhost:8080 'cypress run --config-file cypress.config.ts --component'",
    "test:e2e": "start-server-and-test vite http-get://localhost:8080 'cypress run --config-file cypress.config.ts --e2e'",
    "start-redis": "docker compose -f ../docker-compose.yaml up -d",
    "stop-redis": "docker compose -f ../docker-compose.yaml down",
    "start-api": "npm --prefix ../api start",
    "test:start-api-e2e": "cross-env API_BASE_URL=http://localhost:3000 start-server-and-test start-api 3000 test:api-e2e",
    "test:api-e2e": "npm run test:api && npm run test:component && npm run test:e2e",
    "test": "npm run test:unit && npm run test:start-api-e2e"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-standard": "^9.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^10.0.0",
    "cypress": "^15.2.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "start-server-and-test": "^2.1.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  }
}
